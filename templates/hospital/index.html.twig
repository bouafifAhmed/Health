{% extends 'base.html.twig' %}

{% block title %}Hospital Index{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4 text-center">Liste des Hôpitaux</h1>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <a href="{{ path('app_hospital_new') }}" class="btn btn-success">
            <i class="fas fa-plus"></i> Ajouter un hôpital
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover shadow">
            <thead class="table-dark">
                <tr>
                    <th scope="col" class="text-nowrap">#ID</th>
                    <th scope="col" class="text-nowrap">Nom</th>
                    <th scope="col" class="text-nowrap">Adresse</th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for hospital in hospitals %}
                <tr>
                    <td class="fw-bold">{{ hospital.id }}</td>
                    <td>{{ hospital.name }}</td>
                    <td>{{ hospital.Adresse }}</td>
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            <a href="{{ path('app_hospital_show', {'id': hospital.id}) }}" class="btn btn-sm btn-info">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="{{ path('app_hospital_edit', {'id': hospital.id}) }}" class="btn btn-sm btn-warning">
                                <i class="fas fa-edit"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center text-muted py-4">Aucun hôpital trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<!-- FontAwesome pour les icônes -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
{% endblock %}
