{% extends 'base.html.twig' %}

{% block title %}Modifier le suivi médical{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="col-md-6">
            <div class="card shadow-lg p-4 rounded-4 border border-dark bg-light"> {# Cadre clair avec bordure noire #}
                <h1 class="text-center mb-4">Modifier le suivi médical</h1>  

                {{ form_start(form) }}
                    {# Type de suivi #}
                    <div class="row mb-3">
                        <div class="col-md-12">
                            {{ form_label(form.type_suivi, 'Type de suivi', {'label_attr': {'class': 'form-label'}}) }}
                        </div>
                        <div class="col-md-12">
                            {{ form_widget(form.type_suivi, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.type_suivi) }} {# Afficher les erreurs de validation #}
                        </div>
                    </div>

                    {# Date de début #}
                    <div class="row mb-3">
                        <div class="col-md-12">
                            {{ form_label(form.date_debut, 'Date de début', {'label_attr': {'class': 'form-label'}}) }}
                        </div>
                        <div class="col-md-12">
                            {{ form_widget(form.date_debut, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.date_debut) }} {# Afficher les erreurs de validation #}
                        </div>
                    </div>

                    {# Date de fin #}
                    <div class="row mb-3">
                        <div class="col-md-12">
                            {{ form_label(form.date_fin, 'Date de fin', {'label_attr': {'class': 'form-label'}}) }}
                        </div>
                        <div class="col-md-12">
                            {{ form_widget(form.date_fin, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.date_fin) }} {# Afficher les erreurs de validation #}
                        </div>
                    </div>

                    {# Fréquence #}
                    <div class="row mb-3">
                        <div class="col-md-12">
                            {{ form_label(form.frequence, 'Fréquence', {'label_attr': {'class': 'form-label'}}) }}
                        </div>
                        <div class="col-md-12">
                            {{ form_widget(form.frequence, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.frequence) }} {# Afficher les erreurs de validation #}
                        </div>
                    </div>

                    {# Description #}
                    <div class="row mb-3">
                        <div class="col-md-12">
                            {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                        </div>
                        <div class="col-md-12">
                            {{ form_widget(form.description, {
                                'attr': {
                                    'rows': 4,
                                    'class': 'form-control',
                                    'style': 'resize: none;'
                                }
                            }) }}
                            {{ form_errors(form.description) }} {# Afficher les erreurs de validation #}
                        </div>
                    </div>

                    {# Patient #}
                    <div class="row mb-3">
                        <div class="col-md-12">
                            {{ form_label(form.patient, 'Patient', {'label_attr': {'class': 'form-label'}}) }}
                        </div>
                        <div class="col-md-12">
                            {{ form_widget(form.patient, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.patient) }} {# Afficher les erreurs de validation #}
                        </div>
                    </div>

                    {# Docteur #}
                    <div class="row mb-3">
                        <div class="col-md-12">
                            {{ form_label(form.docteur, 'Docteur', {'label_attr': {'class': 'form-label'}}) }}
                        </div>
                        <div class="col-md-12">
                            {{ form_widget(form.docteur, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.docteur) }} {# Afficher les erreurs de validation #}
                        </div>
                    </div>

                    {# Boutons #}
                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-primary">Mettre à jour</button>
                    </div>
                    <div class="text-center mt-4">
                     <a href="{{ path('app_suivi_medical_index') }}" class="btn btn-secondary">Retour à la liste</a>
                     </div>
                {{ form_end(form) }}

                {# Formulaire de suppression #}
                <div class="text-center mt-3">
                    {{ include('suivi_medical/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}