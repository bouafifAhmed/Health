{% extends 'base.html.twig' %}

{% block title %}Nouvelle Consultation{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .hero-section {
            background: url('https://afm-telethon.com/sites/default/files/styles/landscape/public/media/images/ConsultationHopital_AS310613640_0.jpeg.webp?itok=UHV_FoBi') no-repeat center center;
            background-size: cover;
            height: 40vh;
        }
        .hero-section .container {
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .hero-section .text-white {
            text-align: center;
        }
        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .card-header {
            border-radius: 15px 15px 0 0;
            background-color: #007bff;
            color: #ffffff;
        }
        .card-header h2 {
            margin-bottom: 0;
        }
        .form-control {
            border-radius: 5px;
        }
        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }
        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }
        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }
        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }
        .text-danger {
            color: #dc3545;
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Hero Section -->
    <div class="hero-section">
        <div class="container">
            <div class="text-white">
                
            </div>
        </div>
    </div>

    <!-- Form Section -->
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-lg">
                    <div class="card-header">
                        <h2 class="card-title text-center mb-0">
                            <i class="fas fa-file-medical"></i> Formulaire de consultation
                        </h2>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                            <!-- Date Field -->
                            <div class="form-group mt-3">
                    <label for="date" class="form-label">
                        <i class="fas fa-calendar-alt"></i> Date :
                    </label>
                    {{ form_widget(form.date, {'attr': {'class': 'form-control', 'id': 'consultation_date', 'placeholder': 'Sélectionnez une date'}}) }}
                    <div class="text-danger">
                        {{ form_errors(form.date) }}
                    </div>
                </div>

                            <!-- Motif Field -->
                            <div class="form-group mt-3">
                                <label for="consultation_motif" class="form-label">
                                    <i class="fas fa-sticky-note"></i> Motif :
                                </label>
                                {{ form_widget(form.motif, {
                                    'attr': {
                                        'class': 'form-control',
                                        'id': 'consultation_motif',
                                        'placeholder': 'Entrez le motif de la consultation'
                                    }
                                }) }}
                                <div class="text-danger">
                                    {{ form_errors(form.motif) }}
                                </div>
                            </div>

                            <!-- Diagnostic Field -->
                            <div class="form-group mt-3">
                                <label for="consultation_diagnostic" class="form-label">
                                    <i class="fas fa-diagnoses"></i> Diagnostic :
                                </label>
                                {{ form_widget(form.diagnostic, {
                                    'attr': {
                                        'class': 'form-control',
                                        'id': 'consultation_diagnostic',
                                        'placeholder': 'Entrez le diagnostic'
                                    }
                                }) }}
                                <div class="text-danger">
                                    {{ form_errors(form.diagnostic) }}
                                </div>
                            </div>

                            <!-- Traitement Field -->
                            <div class="form-group mt-3">
                                <label for="consultation_traitement" class="form-label">
                                    <i class="fas fa-prescription-bottle-alt"></i> Traitement :
                                </label>
                                {{ form_widget(form.traitement, {
                                    'attr': {
                                        'class': 'form-control',
                                        'id': 'consultation_traitement',
                                        'placeholder': 'Entrez le traitement'
                                    }
                                }) }}
                                <div class="text-danger">
                                    {{ form_errors(form.traitement) }}
                                </div>
                            </div>

                            <!-- Prix Field -->
                            <div class="form-group mt-3">
                                <label for="consultation_prix" class="form-label">
                                    <i class="fas fa-money-bill-wave"></i> Prix :
                                </label>
                                {{ form_widget(form.prix, {
                                    'attr': {
                                        'class': 'form-control',
                                        'id': 'consultation_prix',
                                        'placeholder': 'Entrez le prix'
                                    }
                                }) }}
                                <div class="text-danger">
                                    {{ form_errors(form.prix) }}
                                </div>
                            </div>

                            <!-- Patient Field -->
                            <div class="form-group mt-3">
                                <label for="consultation_patient" class="form-label">
                                    <i class="fas fa-user-injured"></i> Patient :
                                </label>
                                {{ form_widget(form.patient, {
                                    'attr': {
                                        'class': 'form-control',
                                        'id': 'consultation_patient',
                                        'placeholder': 'Sélectionnez un patient'
                                    }
                                }) }}
                                <div class="text-danger">
                                    {{ form_errors(form.patient) }}
                                </div>
                            </div>

                            <!-- Docteur Field -->
                            <div class="form-group mt-3">
                                <label for="consultation_docteur" class="form-label">
                                    <i class="fas fa-user-md"></i> Docteur :
                                </label>
                                {{ form_widget(form.docteur, {
                                    'attr': {
                                        'class': 'form-control',
                                        'id': 'consultation_docteur',
                                        'placeholder': 'Sélectionnez un docteur'
                                    }
                                }) }}
                                <div class="text-danger">
                                    {{ form_errors(form.docteur) }}
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <div class="text-center mt-4">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="fas fa-save"></i> Enregistrer
                                </button>
                                <a href="{{ path('app_consultation_index') }}" class="btn btn-secondary btn-lg">
                                    <i class="fas fa-arrow-left"></i> Retour à la liste
                                </a>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Call to Action Section -->
    <div class="bg-light py-5">
        <div class="container text-center">
            <h2 class="mb-4">Besoin d'aide ?</h2>
            <p class="lead mb-4">Notre équipe est à votre disposition pour vous accompagner.</p>
            <a href="#" class="btn btn-secondary btn-lg">
                <i class="fas fa-phone"></i> Contactez-nous
            </a>
        </div>
    </div>

    <!-- Flatpickr Script -->
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/fr.js"></script>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
        flatpickr("#{{ form.date.vars.id }}", {
            enableTime: true,
            dateFormat: "Y-m-d H:i",
            time_24hr: true,
            minDate: "today",
            locale: "fr"
        });
    });
</script>
{% endblock %}