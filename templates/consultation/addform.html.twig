{% extends 'base.html.twig' %}

{% block title %}Ajouter/Modifier une consultation{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .container {
            background: linear-gradient(to right, #6a11cb, #2575fc);
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
            padding: 20px;
            margin-top: 30px;
            color: white;
        }
        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }
        h1 {
            font-weight: bold;
            margin-bottom: 20px;
        }
        .form-label {
            font-weight: bold;
            color: #333;
        }
        .form-control {
            border-radius: 5px;
            border: 1px solid #ddd;
            padding: 10px;
        }
        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }
        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 5px;
        }
        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
        .btn-light {
            background-color: #ffffff;
            border-color: #ddd;
            color: #333;
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 5px;
        }
        .btn-light:hover {
            background-color: #f8f9fa;
            border-color: #ccc;
        }
        .text-danger {
            font-size: 14px;
            margin-top: 5px;
        }
        .fa-stethoscope, .fa-user, .fa-user-md, .fa-calendar-alt, .fa-pencil-alt, .fa-notes-medical, .fa-prescription, .fa-euro-sign, .fa-save, .fa-arrow-left {
            margin-right: 10px;
        }
    </style>
{% endblock %}



{% block body %}
    <div class="container py-5">
        <h1 class="text-center">
            <i class="fas fa-stethoscope"></i> Ajouter une consultation
        </h1>
        <div class="card p-4 bg-light">
            {{ form_start(form) }}
                <div class="form-group">
                    <label for="patient" class="form-label">
                        <i class="fas fa-user"></i> Patient :
                    </label>
                    {{ form_widget(form.patient, {'attr': {'class': 'form-control', 'placeholder': 'Sélectionnez un patient'}}) }}
                    <div class="text-danger">
                        {{ form_errors(form.patient) }}
                    </div>
                </div>

                <div class="form-group mt-3">
                    <label for="docteur" class="form-label">
                        <i class="fas fa-user-md"></i> Docteur :
                    </label>
                    {{ form_widget(form.docteur, {'attr': {'class': 'form-control', 'placeholder': 'Sélectionnez un docteur'}}) }}
                    <div class="text-danger">
                        {{ form_errors(form.docteur) }}
                    </div>
                </div>

                <div class="form-group mt-3">
                    <label for="date" class="form-label">
                        <i class="fas fa-calendar-alt"></i> Date :
                    </label>
                    {{ form_widget(form.date, {'attr': {'class': 'form-control', 'id': 'consultation_date', 'placeholder': 'Sélectionnez une date'}}) }}
                    <div class="text-danger">
                        {{ form_errors(form.date) }}
                    </div>
                </div>

                <div class="form-group mt-3">
                    <label for="motif" class="form-label">
                        <i class="fas fa-pencil-alt"></i> Motif :
                    </label>
                    {{ form_widget(form.motif, {'attr': {'class': 'form-control'}}) }}
                    <div class="text-danger">
                        {{ form_errors(form.motif) }}
                    </div>
                </div>

                <div class="form-group mt-3">
                    <label for="diagnostic" class="form-label">
                        <i class="fas fa-notes-medical"></i> Diagnostic (optionnel) :
                    </label>
                    {{ form_widget(form.diagnostic, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le diagnostic'}}) }}
                    <div class="text-danger">
                        {{ form_errors(form.diagnostic) }}
                    </div>
                </div>

                <div class="form-group mt-3">
                    <label for="traitement" class="form-label">
                        <i class="fas fa-prescription"></i> Traitement (optionnel) :
                    </label>
                    {{ form_widget(form.traitement, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le traitement'}}) }}
                    <div class="text-danger">
                        {{ form_errors(form.traitement) }}
                    </div>
                </div>

                <div class="form-group mt-3">
                    <label for="prix" class="form-label">
                        <i class="fas fa-euro-sign"></i> Prix :
                    </label>
                    {{ form_widget(form.prix, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le prix'}}) }}
                    <div class="text-danger">
                        {{ form_errors(form.prix) }}
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Enregistrer
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
        <div class="text-center mt-4">
            <a href="{{ path('app_showconsultation') }}" class="btn btn-light">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>
        </div>
    </div>


    {% block javascripts %}
    
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/fr.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            flatpickr("#consultation_date", {
                dateFormat: "Y-m-d H:i",
                enableTime: true,
                time_24hr: true,
                minDate: "today",
                locale: "fr"
            });
        });
    </script>
{% endblock %}
{% endblock %}