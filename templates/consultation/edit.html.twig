{% extends 'base.html.twig' %}

{% block title %}Modifier Consultation{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .container {
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-top: 30px;
        }
        h1 {
            color: #007bff;
            font-weight: bold;
            margin-bottom: 20px;
        }
        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }
        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }
        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }
        .form-group {
            margin-bottom: 1rem;
        }
        .form-control {
            border-radius: 5px;
        }
        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }
        .fa-file-medical {
            margin-right: 10px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container py-5">
        <h1 class="text-center">
            <i class="fas fa-file-medical"></i> Modifier la consultation
        </h1>

        {{ form_start(form, {'attr': {'class': 'mt-4'}}) }}
            <div class="form-group">
                {{ form_label(form.date) }}
                {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.date) }}
            </div>
            <div class="form-group">
                {{ form_label(form.motif) }}
                {{ form_widget(form.motif, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.motif) }}
            </div>
            <div class="form-group">
                {{ form_label(form.diagnostic) }}
                {{ form_widget(form.diagnostic, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.diagnostic) }}
            </div>
            <div class="form-group">
                {{ form_label(form.traitement) }}
                {{ form_widget(form.traitement, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.traitement) }}
            </div>
            <div class="form-group">
                {{ form_label(form.prix) }}
                {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.prix) }}
            </div>
            <div class="form-group">
                {{ form_label(form.patient) }}
                {{ form_widget(form.patient, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.patient) }}
            </div>
            <div class="form-group">
                {{ form_label(form.docteur) }}
                {{ form_widget(form.docteur, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.docteur) }}
            </div>
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Enregistrer
                </button>
                <a href="{{ path('app_consultation_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Retour Ã  la liste
                </a>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}